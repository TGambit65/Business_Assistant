{
  "name": "typo-js",
  "version": "1.0.0",
  "description": "A JavaScript spellchecker with support for Hunspell dictionaries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepublish": "npm run build"
  },
  "keywords": [
    "spellcheck",
    "spellchecker",
    "spell-check",
    "typo",
    "hunspell",
    "dictionary"
  ],
  "author": "Email Assistant",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "projects": [
      {
        "displayName": "backend",
        "testMatch": [
          "<rootDir>/src/**/*.test.ts",
          "<rootDir>/src/typo/tests/**/*.test.ts"
        ],
        "testEnvironment": "node"
      },
      {
        "displayName": "frontend",
        "testMatch": [
          "<rootDir>/frontend/src/tests/**/*.test.ts"
        ],
        "testEnvironment": "jsdom"
      }
    ]
  }
} 
